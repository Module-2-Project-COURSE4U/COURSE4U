          <span class="btn_close2"> <img class="btn_close" src="/images/closeBtn.png" alt="Icon close"></span>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/auth/signup">Sign up</a></li>
          <li><a href="/auth/login">Log in</a></li>
        {{/unless}}
